<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/feed_list_fragment">

    <fragment
            android:id="@+id/feed_list_fragment"
            android:name="marshi.android.feedpond.FeedListFragment"
            android:label="fragment_feed_list"
            tools:layout="@layout/fragment_feed_list">
        <action
                android:id="@+id/action_feedListFragment_to_feedDetailFragment"
                app:destination="@id/feed_detail_fragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <argument
                app:argType="string"
                android:name="article"/>
    </fragment>

    <fragment
            android:id="@+id/feed_detail_fragment"
            android:name="marshi.android.feedpond.feeddetail.FeedDetailFragment"
            android:label="fragment_feed_detail"
            tools:layout="@layout/fragment_feed_detail"/>
</navigation>
