<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="vm"
                type="marshi.android.tuve.feed_media_list.FeedMediaViewModel"/>
    </data>

    <androidx.cardview.widget.CardView
            style="@style/Widget.MaterialComponents.CardView"
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/my_mtrl_card_corner_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="@dimen/my_mtrl_card_spacing"
                android:layout_marginEnd="@dimen/my_mtrl_card_spacing"
                android:layout_marginTop="@dimen/my_mtrl_card_spacing"
                android:layout_marginBottom="@dimen/my_mtrl_card_bottom_spacing"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/thumbnail"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    glideUrl="@{vm.feedMediaEntity.thumbnail.url}"
                    tools:src="@tools:sample/backgrounds/scenic"/>

            <TextView
                    android:id="@+id/title"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@{vm.feedMediaEntity.title}"
                    android:maxLines="2"
                    android:textColor="@color/title_text"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/thumbnail"
                    tools:text="sampletext"
                    />

            <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"
                    android:text="@{vm.feedMediaEntity.description}"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/body_text"
                    android:textSize="14sp"
                    tools:text="description"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
