<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="vm"
            type="marshi.android.tuve.ui.videoDetail.ChannelVideoItemViewModel"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/video_thumbnail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="200dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,16:9"
                glideUrl="@{vm.videoSnippetEntity.thumbnail.url}"
                tools:src="@tools:sample/backgrounds/scenic"
                />

            <TextView
                android:id="@+id/text"
                app:layout_constraintStart_toEndOf="@id/video_thumbnail"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{vm.videoSnippetEntity.title}"
                tools:text="動画のタイトル"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
